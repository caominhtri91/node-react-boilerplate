{
    "name": "boilerplate",
    "version": "1.0.0",
    "description": "Node/React boilerplate",
    "main": "index.js",
    "scripts": {
	"dev:server": "cd ./server && nodemon --no-warnings ./index.dev.js",
	"dev:client": "cd ./client && webpack-dev-server --config ./webpack.client.dev.js",
	"dev": "concurrently --kill-others \"npm run dev:server\" \"npm run dev:client\"",
	"build:server": "cd ./server && webpack --mode production  --progress --config ./webpack.server.js",
	"build:client": "cd ./client && webpack --mode production  --progress --config ./webpack.client.prod.js",
	"build:all": "npm run build:client && npm run build:server",
	"start": "cd ./server && NODE_ENV=production node ./index.prod.js",
	"serve": "cd ./server && NODE_ENV=production forever start  -o log.txt --pidFile ~/boilerplate.pid ./index.prod.js",
	"stop": "forever stop $(cat ~/boilerplate.pid)"
    },
    "author": "Ray Alez",
    "license": "ISC",
    "devDependencies": {
	"@babel/core": "^7.1.2",
	"@babel/plugin-proposal-class-properties": "^7.1.0",
	"@babel/polyfill": "^7.0.0",
