{
    "name": "boilerplate",
    "version": "1.0.0",
    "description": "Node/React boilerplate",
    "main": "index.js",
    "scripts": {
	"dev:server": "nodemon --inspect ./server/index.js",
	"dev:client": "cd ./client && webpack-dev-server --config ./webpack.client.dev.js",
	"watch:client": "cd ./client && webpack --mode development --config ./webpack.client.js --watch",
	"dev": "concurrently --kill-others \"npm run dev:server\" \"npm run dev:client\"",
	"build:server": "cd ./server && webpack --mode production --config ./webpack.server.js --progress",
	"serve": "cd ./server && NODE_ENV=production forever start --pidFile ~/boilerplate.pid ./index.js > log.txt",
	"stop": "forever stop $(cat ~/boilerplate.pid)"
    },
    "author": "Ray Alez",
    "license": "ISC",
    "devDependencies": {
	"@babel/core": "^7.1.2",
	"@babel/plugin-proposal-class-properties": "^7.1.0",
	"@babel/polyfill": "^7.0.0",
	"@babel/preset-env": "^7.1.0",
	"@babel/preset-react": "^7.0.0",
	"@babel/register": "^7.0.0",
	"babel-loader": "^8.0.4",
	"babel-plugin-styled-components": "^1.8.0",
	"webpack": "^4.25.1",
	"webpack-cli": "^3.1.2",
	"webpack-dev-server": "^3.1.10",
	"webpack-node-externals": "^1.7.2"
    },
    "dependencies": {
	"axios": "^0.18.0",
	"base64url": "^3.0.0",
	"body-parser": "^1.18.3",
	"cors": "^2.8.5",
	"express": "^4.16.4",
	"js-cookie": "^2.2.0",
	"mongoose": "^5.3.9",
	"morgan": "^1.9.1",
	"passport": "^0.4.0",
	"query-string": "^6.2.0",
	"react": "^16.6.0",
	"react-dom": "^16.6.0",
	"react-redux": "^5.1.0",
	"redux": "^4.0.1",
	"redux-thunk": "^2.3.0",
	"styled-components": "^4.1.1",
	"validator": "^10.9.0"
    }
}
